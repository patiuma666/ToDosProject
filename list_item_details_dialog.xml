<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    -<LinearLayout
    android:layout_height="200dp" android:layout_width="match_parent" android:orientation="vertical">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/dialogtopdate" android:layout_gravity="center_horizontal" android:textStyle="bold" android:textColor="#000" android:textSize="20sp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/dialogtitle" android:textStyle="bold" android:textColor="#000" android:textSize="20sp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/dialogdesc" android:textStyle="bold" android:textColor="#000" android:textSize="20sp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/dialogdate" android:textStyle="bold" android:textColor="#000" android:textSize="20sp"/>

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal" android:layout_alignParentRight="true">

    <ImageView android:layout_height="60dp" android:layout_width="60dp" android:id="@+id/dialogstat" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>

</LinearLayout>

</RelativeLayout>